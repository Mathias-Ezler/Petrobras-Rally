---
// Welcome.astro
---

<section 
  class="relative h-[90vh] w-full bg-cover bg-center flex items-center justify-center" 
  style="background-image: url('/fondo.png');"
  id="welcome"
>
  <div class="absolute inset-0 bg-black/70"></div>
  
  <div class="relative z-10 text-center px-4 max-w-5xl">
    <span class="inline-block text-green-400 font-medium tracking-wider uppercase mb-4">Próximo evento - Rally Petrobras 2025</span>
    
    <h1 class="text-5xl md:text-8xl font-black text-yellow-300 uppercase tracking-tighter mb-6">
      <span class="text-green-500">Petrobras</span> Rally
    </h1>
    
    <p class="text-xl md:text-2xl text-gray-200 mb-10 font-medium max-w-3xl mx-auto">
      La aventura comienza en:
    </p>
    
    <div id="countdown" class="flex justify-center items-center mb-16 space-x-8 md:space-x-12">
      {['dias', 'horas', 'minutos', 'segundos'].map((unit) => (
        <div class="group flex flex-col items-center">
          <span 
            id={unit}
            class="block text-6xl md:text-8xl font-black text-white
            group-hover:text-white transition-all duration-300"
          >
            00
          </span>
          <span class="text-sm md:text-base uppercase tracking-widest text-gray-300 group-hover:text-green-400 transition-colors">
            {unit.charAt(0).toUpperCase() + unit.slice(1)}
          </span>
        </div>
      ))}
    </div>
    
    <div class="flex flex-col md:flex-row justify-center space-y-4 md:space-y-0 md:space-x-6">
      <a href="#" class="bg-green-600 text-white px-12 py-4 rounded-lg 
        font-bold uppercase tracking-wider text-sm
        hover:bg-green-700 transition-all duration-300
        transform hover:scale-105 hover:-translate-y-1
        shadow-lg hover:shadow-green-500/20">
        Ver Próximos Eventos
      </a>
      <a href="#" class="border-2 border-white text-white px-12 py-4 rounded-lg 
        font-bold uppercase tracking-wider text-sm
        hover:bg-white hover:text-black 
        transition-all duration-300
        transform hover:scale-105 hover:-translate-y-1
        shadow-lg hover:shadow-white/20">
        Inscríbete Ahora
      </a>
    </div>
  </div>
</section>

<script>
  function updateCountdown() {
    const nextEventDate = new Date('2025-02-20T10:00:00');
    const now = new Date();
    const difference = nextEventDate.getTime() - now.getTime();

    if (difference <= 0) {
      const countdownElement = document.getElementById('countdown');
      if (countdownElement) {
        countdownElement.innerHTML = 
          '<span class="text-4xl md:text-6xl text-green-500 font-black">¡El evento ha comenzado!</span>';
      }
      return;
    }

    const days = Math.floor(difference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((difference / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((difference / (1000 * 60)) % 60);
    const seconds = Math.floor((difference / 1000) % 60);

    const units = ['dias', 'horas', 'minutos', 'segundos'];
    const values = [days, hours, minutes, seconds];

    units.forEach((unit, index) => {
      const element = document.getElementById(unit);
      if (element) {
        element.textContent = values[index].toString().padStart(2, '0');
      }
    });
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>